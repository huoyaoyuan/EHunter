<Project>

  <PropertyGroup Condition="'$(Language)' == 'C#'">
    <LangVersion>9.0</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Language)' == 'VB'">
    <LangVersion>16</LangVersion>
    <OptionExplicit>On</OptionExplicit>
    <OptionInfer>On</OptionInfer>
    <OptionStrict>On</OptionStrict>
    <OptionCompare>Binary</OptionCompare>
  </PropertyGroup>

  <ItemGroup Condition="'$(Language)' == 'C#'">
    <Compile Include="$(MSBuildThisFileDirectory)Source\CLSCompliant.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Required by Reunion 0.5.5 -->
    <FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref"
                        TargetingPackVersion="10.0.18362.16"
                        RuntimeFrameworkVersion="10.0.18362.16" />
  </ItemGroup>

</Project>
