<UserControl
    x:Class="EHunter.Controls.RichImageBase"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.ContextFlyout>
        <MenuFlyout>
            <MenuFlyoutItem>
                <MenuFlyoutItem.Command>
                    <StandardUICommand x:Name="copyCommand"
                                       Kind="Copy"
                                       CanExecuteRequested="CanCopyRequested"
                                       ExecuteRequested="{x:Bind CopyRequested}" />
                </MenuFlyoutItem.Command>
            </MenuFlyoutItem>
            <MenuFlyoutItem Text="Refresh" Icon="Refresh" Click="{x:Bind RefreshImage}" />
        </MenuFlyout>
    </UserControl.ContextFlyout>
    <Grid Background="Transparent">
        <Image x:Name="image"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch" />
        <ProgressRing
            x:Name="loadingProgress"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
    </Grid>
</UserControl>
