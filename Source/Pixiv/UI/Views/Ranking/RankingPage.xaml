<Page
    x:Class="EHunter.Pixiv.Views.Ranking.RankingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:commonControls="using:EHunter.Controls"
    xmlns:controls="using:EHunter.Pixiv.Controls"
    xmlns:res="using:EHunter.Pixiv.Resources"
    xmlns:vm="using:EHunter.Pixiv.ViewModels"
    xmlns:sys="using:System"
    mc:Ignorable="d"
    x:DefaultBindMode="OneWay"
    NavigationCacheMode="Required"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <res:Resources>
            <CollectionViewSource
                x:Name="cvs"
                Source="{x:Bind _vm.Illusts}" />
        </res:Resources>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ComboBox
            Margin="4"
            Grid.Row="0"
            HorizontalAlignment="Left"
            Style="{StaticResource IllustRankingModeSelectorStyle}"
            SelectedValue="{x:Bind _vm.IntSelectedRankingMode, Mode=TwoWay}" />
        
        <CalendarDatePicker
            Margin="4"
            Grid.Row="0"
            HorizontalAlignment="Right"
            Date="{x:Bind _vm.Date, Mode=TwoWay}"
            MaxDate="{x:Bind sys:DateTimeOffset.Now.Date, Mode=OneTime}"/>

        <commonControls:AsyncEnumerableIndicator
            Grid.Row="1"
            VerticalAlignment="Stretch"
            Collection="{x:Bind _vm.Illusts, FallbackValue={x:Null}}" />

        <GridView
            x:Name="illustsGrid"
            Grid.Row="1"
            ItemsSource="{x:Bind cvs.View}"
            IsItemClickEnabled="True"
            IncrementalLoadingTrigger="Edge">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="vm:IllustVM"
                              x:DefaultBindMode="OneTime">
                    <controls:IllustSummary ViewModel="{Binding}" />
                    <!-- TODO: x:Bind doesn't work here.
                         https://github.com/microsoft/microsoft-ui-xaml/issues/3916 -->
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <controls:IllustsFlip
            Grid.Row="1"
            SourceList="{x:Bind illustsGrid}" />
    </Grid>
</Page>
