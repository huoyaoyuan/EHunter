<Page
    x:Class="EHunter.UI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer
        IsTabStop="False"
        UseSystemFocusVisuals="False"
        VerticalScrollMode="Auto"
        VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"
                    Margin="4" Spacing="4"
                    x:DefaultBindMode="TwoWay">
            <TextBlock
                Style="{ThemeResource TitleTextBlockStyle}"
                Margin="0,0,0,6"
                Text ="Storage" />
            <TextBox Header="Storage Root" Text="{x:Bind _setting.StorageRoot}" />

            <TextBlock
                Style="{ThemeResource TitleTextBlockStyle}"
                Margin="0,36,0,6"
                Text ="Proxy" />
            <TextBox Header="Address" Text="{x:Bind _setting.ProxyAddress}" />
            <NumberBox Header="Port" Value="{x:Bind _setting.ProxyPort}" />

            <TextBlock
                Style="{ThemeResource TitleTextBlockStyle}"
                Margin="0,36,0,6"
                Text ="Database" />
            <TextBox Header="Connection String" Text="{x:Bind _setting.DbConnectionString}" />
        </StackPanel>
    </ScrollViewer>
</Page>
