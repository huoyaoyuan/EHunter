<ResourceDictionary
    x:Class="EHunter.Provider.Pixiv.Resources.Resources"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commands="using:EHunter.Provider.Pixiv.Commands"
    xmlns:controls="using:EHunter.Provider.Pixiv.Controls"
    xmlns:local="using:EHunter.Provider.Pixiv.Resources">
    <commands:NavigateToUserCommand x:Key="NavigateToUserCommand" />

    <Style TargetType="Selector"
           x:Key="AgeRestrictionSelectorStyle">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate x:DataType="x:Int32">
                    <controls:AgeRestrictionPresenter IntAge="{x:Bind}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsSource">
            <Setter.Value>
                <local:AgeRestrictionValues />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
