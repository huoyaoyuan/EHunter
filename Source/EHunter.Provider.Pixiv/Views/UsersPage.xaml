<Page
    x:Class="EHunter.Provider.Pixiv.Views.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EHunter.Provider.Pixiv.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:m="using:Meowtrix.PixivApi.Models"
    xmlns:vm="using:EHunter.Provider.Pixiv.ViewModels"
    xmlns:tktr="using:Microsoft.Toolkit.Uwp.UI.Triggers"
    xmlns:user="using:EHunter.Provider.Pixiv.Views.User"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <TabView
        x:Name="tabView"
        TabItemsSource="{x:Bind _vms}"
        TabCloseRequested="TabCloseRequested"
        AddTabButtonClick="{x:Bind AddTab}">
        <TabView.TabItemTemplate>
            <DataTemplate x:DataType="vm:UserVM"
                          x:DefaultBindMode="OneWay">
                <TabViewItem>
                    <TabViewItem.Header>
                        <user:UserTabHeader VM="{x:Bind}" />
                    </TabViewItem.Header>

                    <user:UserTab VM="{x:Bind}" />
                </TabViewItem>
            </DataTemplate>
        </TabView.TabItemTemplate>
    </TabView>
</Page>
