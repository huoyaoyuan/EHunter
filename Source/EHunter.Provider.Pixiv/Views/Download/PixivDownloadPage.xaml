<Page
    x:Class="EHunter.Provider.Pixiv.Views.Download.PixivDownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vmd="using:EHunter.Provider.Pixiv.ViewModels.Download"
    xmlns:local="using:EHunter.Provider.Pixiv.Views.Download"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ListView
        IsItemClickEnabled="False"
        SelectionMode="None"
        ItemsSource="{x:Bind _vm.DownloadTasks}">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="vmd:DownloadTaskVM"
                          x:DefaultBindMode="OneWay">
                <local:DownloadTaskView
                    VM="{x:Bind}" />
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            </Style>
        </ListView.ItemContainerStyle>
    </ListView>
</Page>
