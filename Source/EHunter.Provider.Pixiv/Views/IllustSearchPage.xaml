<Page
    x:Class="EHunter.Provider.Pixiv.Views.IllustSearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:EHunter.Provider.Pixiv.ViewModels"
    xmlns:search="using:EHunter.Provider.Pixiv.Views.IllustSearch"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <TabView
        TabItemsSource="{x:Bind _vm.Tabs}"
        SelectedIndex="{x:Bind _vm.SelectedIndex, Mode=TwoWay}"
        AddTabButtonClick="{x:Bind _vm.AddTab}"
        TabCloseRequested="TabCloseRequested">
        <TabView.TabItemTemplate>
            <DataTemplate x:DataType="vm:IllustSearchVM"
                          x:DefaultBindMode="OneWay">
                <TabViewItem>
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Find" />
                    </TabViewItem.IconSource>
                    <TabViewItem.Header>
                        <search:IllustSearchTabHeader
                            VM="{x:Bind}" />
                    </TabViewItem.Header>
                    <search:IllustSearchTab
                        VM="{x:Bind}" />
                </TabViewItem>
            </DataTemplate>
        </TabView.TabItemTemplate>
    </TabView>
</Page>
